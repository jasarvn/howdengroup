@{
    Layout = "~/Views/insuranceMonitoringSystem/infoTech/layout/_infoTechLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
TechInfo
<style>
    #Delete:hover {
    cursor: pointer;
    color: blue;
    }
    #Edit:hover{
        cursor: pointer;
        color: blue;
    }
</style>
@{
    <a class="active" asp-area="" asp-controller="infoTech" asp-action="newEmployee">New Employee</a>
}

<div style="width: 100%; height: 200px; overflow: auto;">
    <table border="1">

        <thead>
            <tr>
                @foreach (System.Data.DataColumn col in Model.Columns)
                {

                    if (col.Caption != "dlflg")
                    {
                        <th>@col.Caption</th>
                    }


                }
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           
                
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    var cnt = 0;
            <tr>
                @foreach (var cell in row.ItemArray)
                {
                    if (cnt != 4)
                    {
                        <td>@cell.ToString()</td>
                    }

                    cnt++;
                }
                <td><div Id="Edit" onclick="edit_Employee('@row.ItemArray[0]')">Edit</div></td>
                <td><div Id="Delete" onclick="delete_employee('@row.ItemArray[0]')">Delete</div></td>
            </tr>
                }
            
        </tbody>
    </table>
</div>

<script>
    function edit_Employee(emp_id) {
        window.location.href = '@Url.Action("editEmployee", "infoTech")/?empId='+emp_id;
    }

    function delete_employee(emp_id) {
      	$.post('@Url.Action("deleteEmployee", "infoTech")',
				{
                    "empId": emp_id
				}, function(result){
				    window.location.href = '@Url.Action("Index", "infoTech")';
				});
      
    }
</script>







