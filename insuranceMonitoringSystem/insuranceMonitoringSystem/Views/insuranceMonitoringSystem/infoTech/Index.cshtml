@{
    Layout = "~/Views/insuranceMonitoringSystem/infoTech/layout/_infoTechLayout.cshtml";
}

<style>
    #mainContainer {
        display: grid;
        display: -ms-grid;
        grid-template-rows: 60px 1fr 1fr;
        grid-template-columns: 500px 500px;
    }
   
</style>
<h1 class="grid_col1 grid_row1">I.T. Dashboard</h1>
<div id="employeeContainer" class="grid_col1 grid_row2">

</div>
<div id="departmentContainer" class="grid_col2 grid_row2" style="margin-left: 10px;">

</div>



<script>
     $(document).ready(function() {
         display_employee();
         display_Department();
     });

    function display_employee() {
        $.post('@Url.Action("employeeDashboard", "infoTech")',
				{

            }, function (result) {
                    document.getElementById("employeeContainer").innerHTML= result
             	});
    }


    function display_Department() {
        $.post('@Url.Action("employeeDashboard", "infoTech")',
				{

            }, function (result) {
                    document.getElementById("departmentContainer").innerHTML= result
             	});
    }
     
</script>









